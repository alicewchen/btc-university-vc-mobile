# =============================================================================
# Ethereum Nature Reserve - Environment Variables
# =============================================================================
# Copy this file to .env and fill in your actual values
# Some variables are optional and have sensible defaults

# =============================================================================
# DATABASE
# =============================================================================
# PostgreSQL connection string (provided by Replit)
DATABASE_URL=postgresql://user:password@host:port/database

# =============================================================================
# THIRDWEB WEB3 SDK
# =============================================================================
# Get your Thirdweb API keys from: https://thirdweb.com/dashboard

# Client ID for frontend wallet connections (REQUIRED for wallet features)
VITE_THIRDWEB_CLIENT_ID=your_thirdweb_client_id_here

# Secret key for backend operations (optional, for advanced features)
THIRDWEB_SECRET_KEY=your_thirdweb_secret_key_here

# Thirdweb Engine configuration (optional, for gasless transactions)
THIRDWEB_ENGINE_URL=https://engine.thirdweb.com
THIRDWEB_ENGINE_ACCESS_TOKEN=your_engine_access_token_here
THIRDWEB_BACKEND_WALLET=your_backend_wallet_address_here
THIRDWEB_CHAIN_ID=84532

# =============================================================================
# SMART CONTRACTS
# =============================================================================
# Deployed contract addresses (update after deploying your contracts)

# Investment tracker contract address (optional)
VITE_INVESTMENT_TRACKER_ADDRESS=

# DAO factory contract address (optional)
VITE_DAO_FACTORY_ADDRESS=

# Treasury router contract address (optional)
VITE_TREASURY_ROUTER_ADDRESS=

# Legacy contract address (optional)
VITE_CONTRACT_ADDRESS=

# Active blockchain network: "base" for Base, "base-sepolia" for Base Sepolia testnet
VITE_CHAIN=base-sepolia

# Chain ID for blockchain network (11155111 = Sepolia, 1 = Mainnet, etc.)
VITE_CHAIN_ID=11155111

# =============================================================================
# IPFS / FILE STORAGE
# =============================================================================
# Pinata credentials for decentralized file storage (optional)
# Get your API keys from: https://pinata.cloud

VITE_PINATA_API_KEY=your_pinata_api_key_here
VITE_PINATA_SECRET_KEY=your_pinata_secret_key_here

# =============================================================================
# AI / PERPLEXITY
# =============================================================================
# Perplexity AI API key for DAO discovery chat (optional)
# Get your API key from: https://www.perplexity.ai/settings/api

PERPLEXITY_API_KEY=your_perplexity_api_key_here

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
# Application name and URL
VITE_APP_NAME=Ethereum Nature Reserve
VITE_APP_URL=https://your-domain.com

# Server configuration
NODE_ENV=development
PORT=5000

# =============================================================================
# NOTES
# =============================================================================
# - Variables prefixed with VITE_ are exposed to the frontend
# - Variables without VITE_ are backend-only
# - Required variables: DATABASE_URL, VITE_THIRDWEB_CLIENT_ID (for wallet features)
# - All other variables are optional and have fallback defaults
# - For local blockchain development, start Hardhat node: cd contracts && npx hardhat node
